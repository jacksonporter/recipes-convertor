# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black default
insert_final_newline = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Configuration files
[*.{ini,toml,cfg}]
indent_style = space
indent_size = 4

# Requirements files
[{requirements.txt,requirements/*.txt}]
end_of_line = lf
insert_final_newline = true

# Documentation
[docs/*]
indent_style = space
indent_size = 4
